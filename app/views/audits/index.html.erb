<p id="notice"><%= notice %></p>

<h1>Audits</h1>

<table>
  <thead>
    <tr>
      <th>Entity</th>
      <th>Entity ID</th>
      <th>Updated At</th>
      <th>Updated By</th>
    </tr>
  </thead>

  <tbody>
    <% @audits.each do |audit| %>
      <tr>
        <td><%= audit.auditable_type %></td>
        <td><%= audit.auditable_id %></td>
        <td><%= audit.created_at %></td>
        <td><%= audit.user.email %></td>
        <td><%= link_to 'Show', audit %></td>
      </tr>
    <% end %>
  </tbody>
</table>

